{
  "name": "nextjs-aws-starter",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "dotenv -e .env.local -- next dev",
    "build": "dotenv -e .env.production -- prisma generate && next build",
    "start": "dotenv -e .env.production -- next start",

    "typecheck": "dotenv -e .env.local -- tsc --noEmit",
    "lint": "dotenv -e .env.local -- next lint",

    "test": "dotenv -e .env.test -- vitest run",
    "test:ui": "dotenv -e .env.test -- vitest",
    "test:ci": "dotenv -e .env.test -- vitest run --reporter=dot",
    "e2e": "dotenv -e .env.test -- playwright test",

    "migrate:dev": "dotenv -e .env.local -- prisma migrate dev",
    "migrate:test": "dotenv -e .env.test -- prisma migrate reset --force && prisma migrate deploy",
    "seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "whoami:env": "dotenv -e .env.test -- node -e \"console.log(process.env.NEXTAUTH_SECRET)\""
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@hookform/resolvers": "3.9.0",
    "@prisma/client": "5.19.1",
    "@tanstack/react-query": "5.56.2",
    "bcryptjs": "2.4.3",
    "clsx": "2.1.1",
    "next": "^14.2.33",
    "next-auth": "^4.24.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "6.4.6",
    "@testing-library/react": "16.0.0",
    "@types/bcryptjs": "2.4.6",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.24",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^10.0.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.41",
    "prisma": "5.19.1",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.20.5",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  }
}
